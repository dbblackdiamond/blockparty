<!doctype html>
<html>
{{template "head" .}}
    <body>
	{{template "navbar" .}}
	<div class="container-fluid">
		<h2 class="text-center" id="title"></h2>
		<div id="bidTable">
			<table class="table table-striped">
			<thead>
				<tr>
					<th>User</th>
					<th>House ID</th>
					<th>Bid</th>
					<th colspan="2" class="text-center">Action</th>
				</tr>
			</thead>
			<tbody id="tableData">
			</tbody>
			</table>
		</div>
	</div>
    </body>
    <script>
	mainURL={{.URL}};
	houseID=window.location.pathname.replace("/house/","").replace("/bids","");

	function getBidData() {
		console.log("GBD");
		$.getJSON(mainURL + "/house/" + houseID + "/info",{ts:Date.now()},populateBids);
	}

	getBidData();

	function populateBids(data) {
		c=data.contract;
		address=data.address;
		$("#title").text("Bids for " + address);
		response=listBids(c);
	
		table=d3.select("#tableData").selectAll("tr").data(response.bids);
	
		row=table.enter()
			.append("tr");
		
		row
			.append("td")
				.text(function(d){return d.bidder;});
		row
			.append("td")
			.text(houseID);
		row
			.append("td")
				.text(function(d){return "$" + formatAmount(d.amount);});
		row
			.append("td")
				.append("input")
					.attr("type","button")
					.attr("class","btn btn-success center-block")
					.attr("style",function(d){if (d.status != 1) {return "display:none";}})
					.attr("value","Accept")
					.attr("onClick",function(d){return "acceptBid('" + d.bidder + "','" + c + "');";});
		row
			.append("td")
				.append("input")
					.attr("type","button")
					.attr("class","btn btn-danger center-block")
					.attr("style",function(d){if (d.status != 1 ) {return "display:none";}})
					.attr("value","Reject")
					.attr("onClick",function(d){return "rejectBid('" + d.bidder + "','" + c + "');";});
	
		row
			.append("td")
					.attr("class","text-center")
					.attr("style",function(d){if (d.status == 1) {return "display:none";}})
					.attr("colspan","2")
					.text(function(d){if (d.status == 2) {return "Accepted";} else if (d.status == 3) { return "Rejected" }});
	}
	function acceptBid(userAddress,contract) {
		callHouseAcceptBid(contract,userAddress);
		$("#tableData").html("");
		getBidData();
	}

	function rejectBid(userAddress,contract) {
		callHouseRejectBid(contract,userAddress);
		$("#tableData").html("");
		getBidData();
	}
    </script>
</html>
