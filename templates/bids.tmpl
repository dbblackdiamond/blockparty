<!doctype html>
<html>
{{template "head"}}
    <body>
	{{template "navbar" .}}
	<div class="container-fluid">
		<h2 class="text-center" id="title">Bids</h2>
		<div id="bidTable">
			<table class="table table-striped">
			<thead>
				<tr>
					<th>User</th>
					<th>Contract</th>
					<th>Bid</th>
					<th colspan="2" class="text-center">Action</th>
				</tr>
			</thead>
			<tbody id="tableData">
			{{range .Bids}}
				<tr>
					<td>{{.User}}</td>
					<td>{{.Contract}}</td>
					<td>$<script>document.write(parseFloat("{{.Amount}}").toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,')); </script></td>
						<td><input type="button" class="btn btn-success center-block" value="Accept" onClick="acceptBid('{{.User}}','{{.Contract}}');"/></td>
						<td><input type="button" class="btn btn-danger center-block" value="Reject" onClick="rejectBid('{{.User}}','{{.Contract}}');"/></td>
				</tr>
			{{end}}
			</tbody>
			</table>
		</div>
	</div>
    </body>
    <script>
	function acceptBid(user,contract) {
		alert("Accepting bid from user " + user + " for contract " + contract + ".");
	}
	function rejectBid(user,contract) {
		alert("Rejecting bid from user " + user + " for contract " + contract + ".");
	}

    </script>
</html>
