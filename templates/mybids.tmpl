<!doctype html>
<html>
{{template "head"}}
    <body>
	{{template "navbar" .}}
	<div class="container-fluid">
		<h2 class="text-center" id="title">My Bids</h2>
		<div id="bidTable">
			<table class="table table-striped">
			<thead>
				<tr>
				<th>Contract</th>
				<th>Bid</th>
				<th>Status</th>
				</tr>
			</thead>
			<tbody id="tableData">
			{{range .Bids}}
				<tr onClick="showMyBid('{{.Contract}}');">
					<td>{{.Contract}}</td>
					<td>$<script>document.write(parseFloat("{{.Amount}}").toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,')); </script></td>
					<td>{{.Status}}</td>
				</tr>
			{{end}}
			</tbody>
			</table>
		</div>
	</div>
    </body>
    <script>
	function showMyBid(contract) {
		window.location={{.Url}} + "/house/" + contract + "/myBid";
	}
    </script>
</html>
