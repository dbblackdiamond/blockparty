<!doctype html>
<html>
{{template "head" .}}
	<body>
	{{template "navbar" .}}
	<img style="display:none" alt="Pathfinder Logo" id="pathfinder" class="center-block" src="/images/Pathfinder-Logo.png"/>
	<div id="listings" class="container" style="display:none">
		<div id="houses" class="row">
		{{range .Houses}}
			{{template "housePanel" .}}
		{{end}}
		</div>
	</div>
	</body>
	<script>
		var p=JSON.stringify({{.Parameters}});
		$("#pathfinder").show();
		$("#listings").show();
		$(".price").each(function(i){
			var val=parseFloat($(this).text());
			$(this).text("$" + val.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,'));
		});

    		function showDetails(houseID) {
			window.location={{.URL}}+"/house/"+houseID;
		}
	</script>
</html>
